{
  "name": "@hai.ai/jacs",
  "version": "0.6.1",
  "description": "JACS (JSON Agent Communication Standard) - Data provenance and cryptographic signing for AI agents",
  "main": "index.js",
  "types": "index.d.ts",
  "overrides": {
    "body-parser": "^2.2.1",
    "qs": "^6.14.0"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./simple": {
      "import": "./simple.js",
      "require": "./simple.js",
      "types": "./simple.d.ts"
    },
    "./a2a": {
      "import": "./src/a2a.js",
      "require": "./src/a2a.js",
      "types": "./src/a2a.d.ts"
    },
    "./mcp": {
      "import": "./mcp.js",
      "require": "./mcp.js",
      "types": "./mcp.d.ts"
    },
    "./http": {
      "import": "./http.js",
      "require": "./http.js",
      "types": "./http.d.ts"
    }
  },
  "scripts": {
    "build": "napi build --platform --release && npm run build:ts",
    "build:debug": "napi build --platform && npm run build:ts",
    "build:ts": "tsc",
    "test": "JACS_PRIVATE_KEY_PASSWORD='TestP@ss123!#' mocha --timeout 15000 'test/**/*.test.js'",
    "test:utils": "mocha --timeout 15000 'test/utils.test.js'",
    "test:agent": "JACS_PRIVATE_KEY_PASSWORD='TestP@ss123!#' mocha --timeout 15000 'test/agent.test.js'",
    "test:simple": "JACS_PRIVATE_KEY_PASSWORD='TestP@ss123!#' mocha --timeout 15000 'test/simple.test.js'",
    "test:a2a": "mocha --timeout 15000 'test/a2a.test.js'",
    "test:integration": "JACS_PRIVATE_KEY_PASSWORD='TestP@ss123!#' mocha --timeout 15000 'test/integration.test.js'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@napi-rs/cli": "^2.16.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15",
    "chai": "^6.2.2",
    "mocha": "^11.7.5",
    "sinon": "^21.0.1",
    "typescript": "^5.7.0"
  },
  "napi": {
    "name": "jacs",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-apple-darwin",
        "aarch64-apple-darwin"
      ]
    }
  },
  "author": "HAI.AI",
  "license": "ISC",
  "homepage": "https://hai.ai/jacs",
  "repository": {
    "type": "git",
    "url": "https://github.com/HumanAssisted/JACS.git"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "simple.js",
    "simple.d.ts",
    "src/a2a.js",
    "src/a2a.d.ts",
    "mcp.ts",
    "mcp.d.ts",
    "mcp.js",
    "mcp.js.map",
    "http.js",
    "http.d.ts",
    "jacs.*.node"
  ],
  "keywords": [
    "jacs",
    "ai",
    "agent",
    "signing",
    "verification",
    "cryptography",
    "mcp",
    "model-context-protocol"
  ]
}
