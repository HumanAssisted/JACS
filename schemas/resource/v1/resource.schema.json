{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hai.ai/schemas/resource/v1/resource-schema.json",
  "title": "Agent",
  "description": "General schema for stateful resources.",
  "allOf": [
    {
      "$ref": "../../header/v1/header.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "resourcetype": {
          "type": "string",
          "description": "general type of resource",
          "enum": [
            "agent",
            "time",
            "physical",
            "monetary",
            "information"
          ]
        },
        "linked_data_uri": {
          "type": "string",
          "description": "URI of Semantic Web or JSON-LD type"
        },
        "name": {
          "description": "Name of the agent, unique per registrar",
          "type": "string"
        },
        "description": {
          "description": "General description",
          "type": "string"
        },
        "capabilities": {
          "type": "array",
          "desciption": "list of actions which the resource can do capabilities",
          "items": {
            "$ref": "../../components/action/v1/action.schema.json"
          }
        },
        "modifications": {
          "type": "array",
          "desciption": "list of actions that can be done to the resource",
          "items": {
            "$ref": "../../components/action/v1/action.schema.json"
          }
        },
        "quantifications": {
          "type": "array",
          "description": "array of quantitative units defining the resource",
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": [
              {
                "type": "number",
                "description": "value of the unit"
              },
              {
                "$ref": "../../components/unit/v1/unit.schema.json",
                "description": "the unit"
              }
            ]
          }
        }
      }
    }
  ],
  "required": [
    "id",
    "name",
    "resourcetype",
    "description",
    "capabilities",
    "modifications"
  ]
}
