{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hai.ai/schemas/resource/v1/resource-schema.json",
  "title": "Agent",
  "description": "General schema for stateful resources.",
  "type": "object",
  "properties": {
    "id": {
      "description": "Resource GUID",
      "type": "string"
    },
    "resourcetype": {
      "type": "string",
      "description": "general type of resource",
      "enum": ["agent", "time", "physical", "montetary", "information"]
    },
    "linked_data_uri": {
      "type": "string",
      "description": "URI of Semantic Web or JSON-LD type"
    },
    "version": {
      "description": "Semantic Version number of the resource",
      "type": "string"
    },
    "version_date": {
      "description": "Date ",
      "format": "date-time",
      "type": "string"
    },
    "registered_with": {
      "description": "Organization",
      "type": "string"
    },
    "registration_signature": {
      "description": "Signature from registrar for verifying",
      "type": "string"
    },
    "registered_date": {
      "description": "date registred",
      "format": "date-time",
      "type": "string"
    },
    "name": {
      "description": "Name of the agent, unique per registrar",
      "type": "string"
    },
    "description": {
      "description": "General description",
      "type": "string"
    }
  },
  "required": ["id", "name", "resourcetype", "description" ]
}