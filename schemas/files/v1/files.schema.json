{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hai.ai/file/agent/v1/file-schema.json",
  "title": "File",
  "description": "General resource for a file, document not in JACS.",
  "allOf": [
    {
      "$ref": "../../resource/v1/resource.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "mimetype": {
          "type": "string",
          "description": "Type of file. e.g. https://www.iana.org/assignments/media-types/application/json"
        },
        "url": {
          "type": "string",
          "description": "where can the file be found online. ipfs, https, etc"
        },
        "contents": {
          "type": "string",
          "description": "base64 encoded contents, possibly compressed"
        },
        "compressed": {
          "type": "boolean",
          "description": "are the base64 contents compressed"
        }
      }
    }
  ],
  "required": [
    "mimetype"
  ],
  "oneOf": [
    {
      "required": [
        "url"
      ],
      "not": {
        "required": [
          "contents",
          "compressed"
        ]
      }
    },
    {
      "required": [
        "contents",
        "compressed"
      ],
      "not": {
        "required": [
          "url"
        ]
      }
    }
  ]
}
