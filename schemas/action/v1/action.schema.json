{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hai.ai/schemas/action/v1/action-schema.json",
  "title": "Action",
  "description": "General type of actions a resource or agent can take, and a set of things that can happen to a resource or agent.",
  "type": "object",
  "properties": {
    "id": {
      "description": "Action GUID",
      "type": "string",
      "format": "uuid"
    },
    "version": {
      "description": "Semantic Version number of the action",
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "operation": {
      "type": "string",
      "description": "type of change that can happen"
    },
    "units": {
      "type": "array",
      "description": "units that can be modified",
      "items": {
        "$ref": "../../unit/v1/unit.schema.json"
      }
    }
  },
  "required": [
    "id",
    "name",
    "operation"
  ]
}
