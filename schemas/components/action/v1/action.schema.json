{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hai.ai/schemas/components/action/v1/action-schema.json",
  "title": "Action",
  "description": "General actions definitions which can comprise a service. Distinct from function calling.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
       "hai": "agent",
    },
    "description": {
      "type": "string",
      "description": "type of change that can happen",
      "hai": "agent",
    },
    "tools": {
      "type": "array",
      "description": "tools that can be utilized",
      "items": {
        "$ref": "../../tool/v1/tool.schema.json"
      }
    },
    "completionAgreement": {
      "description": "Signatures signfying an agreement between agents.",
      "$ref": "../../components/agreement/v1/agreement.schema.json"
    },
    "units": {
      "type": "array",
      "description": "units that can be modified",
      "items": {
        "$ref": "../../unit/v1/unit.schema.json"
      }
    },
    "completionAgreementRequired": {
      "type": "boolean",
      "description": "Do agents need to agree task is completed.",
       "hai": "meta",
    }
  },
  "required": [
    "name",
    "description"
  ]
}
