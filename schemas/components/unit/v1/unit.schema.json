{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/components/unit/v1/unit.schema.json",
  "title": "Unit",
  "description": "Labels and quantitative values.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "hai": "base",
      "format": "uuid"
    },
    "description": {
      "description": "reason this unit is present",
      "hai": "agent",
      "type": "string"
    },
    "generalType": {
      "type": "string",
      "description": "general type of resource",
      "hai": "meta",
      "enum": [
        "agent",
        "time",
        "physical",
        "monetary",
        "information"
      ]
    },
    "unitName": {
      "type": "string",
      "hai": "agent",
      "description": "pounds, square ft, dollars, hours, etc"
    },
    "quantity": {
      "type": "integer",
      "hai": "agent",
      "description": "the amount"
    },
    "label": {
      "type": "string",
      "hai": "agent",
      "description": "age, weight, net worth etc"
    }
  },
  "required": [
    "id",
    "unitName",
    "label",
    "quantity"
  ],
  "additionalProperties": false
}
