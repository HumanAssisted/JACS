{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hai.ai/schemas/components/message/v1/message-schema.json",
  "title": "Message",
  "description": "A signed, immutable message from a user",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "signature": {
      "description": "signing of message",
      "$ref": "../../../components/signature/v1/signature.schema.json"
    },
    "datetime": {
      "description": "Date ",
      "format": "date-time",
      "type": "string"
    },
    "content": {
      "description": "Summary of change",
      "type": "string"
    },
    "originalContent": {
      "type": "array",
      "desciption": "list of files  ",
      "items": {
        "$ref": "../../../components/files/v1/files.schema.json"
      }
    }
  },
  "required": [
    "id",
    "name",
    "resourcetype",
    "description"
  ]
}
