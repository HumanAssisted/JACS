{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hai.ai/schemas/components/decision/v1/decision-schema.json",
  "title": "Decision",
  "description": "descision is a log message of version changes, actions or edits, verified with a signature",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "approvedBy": {
      "description": "Where the resource is registered",
      "$ref": "../../../components/signature/v1/signature.schema.json"
    },
    "oldversion": {
      "description": "Semantic of the version of the task",
      "type": "string"
    },
    "newversion": {
      "description": "Semantic of the version of the task",
      "type": "string"
    },
    "summary": {
      "description": "Summary of change",
      "type": "string"
    },
    "messages": {
      "type": "array",
      "desciption": "messages from agents ",
      "items": {
        "$ref": "../../../components/message/v1/message.schema.json"
      }
    }
  },
  "required": [
    "id",
    "approvedBy",
    "newversion",
    "summary"
  ]
}
